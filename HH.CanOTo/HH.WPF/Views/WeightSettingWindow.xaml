<Window x:Class="HH.WPF.Views.WeightSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HH.WPF.Views"
        mc:Ignorable="d"
        Title="WeightSettingWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock>Weight</TextBlock>
            <TextBlock x:Name="tbDiffWeight">123</TextBlock>
            <Button x:Name="btnIncearse" Width="Auto" Height="Auto">+</Button>
            <Button x:Name="btnDecrease">-</Button>

        </StackPanel>
    </Grid>
</Window>
